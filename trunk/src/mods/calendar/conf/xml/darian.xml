    <section id="7"  name="Pisces"      abbr="Pis" days="28" />
    <section id="8"  name="Mina"        abbr="Min" days="28" />
    <section id="9"  name="Aries"       abbr="Ari" days="28" />
    <section id="10" name="Mesha"       abbr="Mes" days="28" />
