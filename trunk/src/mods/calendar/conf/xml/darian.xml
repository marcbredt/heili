  <!-- subsections alias weeks -->
  <subsections amount="7">
    <subsection id="0" name="Solis"    abbr="So" />
    <subsection id="1" name="Lunae"    abbr="Lu" />
    <subsection id="2" name="Martis"   abbr="Ma" />
    <subsection id="3" name="Mercurii" abbr="Me" />
