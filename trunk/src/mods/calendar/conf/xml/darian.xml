    <subsection id="5" name="Veneris"  abbr="Ve" />
    <subsection id="6" name="Saturni"  abbr="Sa" />
  </subsections>

  <!-- intercalation rules for leap days -->
  <rules cycle="10000">
    <rule id="24" days="28" range="0-2000"     years="%1000,!%100,%10,!%2" />
    <rule id="24" days="28" range="2001-4800"  years="!%150,%10,!%2"       />
    <rule id="24" days="28" range="4801-6800"  years="!%200,%10,!%2"       />
    <rule id="24" days="28" range="6801-8400"  years="!%300,%10,!%2"       />
    <rule id="24" days="28" range="8401-10000" years="!%600,%10,!%2"       />
  </rules>

</calendar>
