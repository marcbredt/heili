<?xml version="1.0" standalone="no" ?>
<root>
  <php-init>

    <!-- globals -->
    <set key="zend.enable_gc" value="On" />
    <set key="error_reporting" value="E_ALL" />
    <set key="display_errors" value="On" />
    <set key="display_startup_errors" value="On" />
    <set key="log_errors" value="On" />
    <set key="report_memleaks" value="On" />
    <set key="track_errors" value="On" />
    <set key="html_errors" value="On" />
    <set key="error_log" value="@dir-log-file@" />
    <set key="allow_url_fopen" value="Off" />
    <set key="allow_url_include" value="Off" />

    <!-- databases -->
    <set key="sql.safe_mode" value="On" />

    <set key="mysql.trace_mode" value="On" condition="mysql" />

    <set key="mysqlnd.collect_statistics" value="On" />
    <set key="mysqlnd.collect_memory_statistics" value="On" />

    <set key="pgsql.allow_persistent" value="On" condition="pgsql" />
    <set key="pgsql.auto_reset_persistent" value="Off" condition="pgsql" />
    <set key="pgsql.max_persistent" value="-1" condition="pgsql" />
    <set key="pgsql.max_links" value="-1" condition="pgsql" />
    <set key="pgsql.ignore_notice" value="0" condition="pgsql" />
    <set key="pgsql.log_notice" value="0" condition="pgsql" />

    <!-- session -->
    <set key="session.use_strict_mode" value="1" condition="session" />
    <set key="session.use_cookies" value="1" condition="session" />
    <set key="session.use_only_cookies" value="1" condition="session" />
    <set key="session.name" value="pid" condition="session" />
    <set key="session.cookie_httponly" value="1" condition="session" />
    <set key="session.gc_probability" value="1" condition="session" />
    <set key="session.gc_divisor" value="100" condition="session" />
    <set key="session.gc_maxlifetime" value="900" condition="session" />
    <set key="session.hash_function" value="1" condition="session" />

    <!-- xdebug -->
    <set key="xdebug.collect_return" value="1" condition="xdebug" />
    <set key="xdebug.coverage_enable" value="1" condition="xdebug" />
    <set key="xdebug.dump.COOKIE" value="*" condition="xdebug" />
    <set key="xdebug.dump.FILES" value="*" condition="xdebug" />
    <set key="xdebug.dump.GET" value="*" condition="xdebug" />
    <set key="xdebug.dump.POST" value="*" condition="xdebug" />
    <set key="xdebug.dump.REQUEST" value="*" condition="xdebug" />
    <set key="xdebug.dump.SERVER" value="*" condition="xdebug" />
    <set key="xdebug.dump.SESSION" value="*" condition="xdebug" />
    <set key="xdebug.force_display_errors" value="1" condition="xdebug" />
    <set key="xdebug.profiler_append" value="1" condition="xdebug" />
    <set key="xdebug.show_mem_delta" value="1" condition="xdebug" />
    <set key="xdebug.profiler_enable" value="1" condition="xdebug" />
    <set key="xdebug.profiler_output_dir" value="@dir-log-xdebug@" condition="xdebug" />
    <set key="xdebug.profiler_output_name" value="profile.cachegrind.%t.%p.%H" 
         condition="xdebug" />
    <set key="xdebug.trace_format" value="2" condition="xdebug" />
    <set key="xdebug.trace_options" value="1" condition="xdebug" />
    <set key="xdebug.trace_output_name" value="trace.%t.%p.%H" condition="xdebug" />

  </php-init>
</root>

