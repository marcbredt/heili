<root>

  <global>
    <host replace="%HOST%">test.berlin.lo</host>
    <useragent replace="%AGENT%">Mozilla/5.0 (X11; Linux i686; rv:31.0) Gecko/20100101 Firefox/31.0 Iceweasel/31.8.0</useragent>
    <!-- have a look at store[as] in scenario conf -->
    <!--<cookie replace="%COOKIE%"></cookie>-->
    <boundary replace="%BOUNDARY%">---------------------------15372019831223165511057267182</boundary>
    <binfile replace="%BINDATAFILE%">foo.jpg</binfile>
  </global>

  <operations>

    <operation name="init_psc_upload_local">
      <url>http://test.berlin.lo</url>
      <method>GET</method>
      <header>
        <values>
          <value name="Host">test.berlin.lo</value>
          <value name="User-Agent">%AGENT%</value>
          <value name="Accept">text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8</value>
          <value name="Accept-Language">de,en-US;q=0.7,en;q=0.3</value>
          <value name="Accept-Encoding">gzip, deflate</value>
          <value name="Connection">keep-alive</value>
        </values>
      </header>
    </operation>

    <operation name="options_psc_upload_local">
      <url>https://test.berlin.lo</url>
      <method>OPTIONS</method>
      <header>
        <values>
          <value name="Host">test.berlin.lo</value>
          <value name="User-Agent">%AGENT%</value>
          <value name="Accept">text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8</value>
          <value name="Accept-Language">de,en-US;q=0.7,en;q=0.3</value>
          <value name="Accept-Encoding">gzip, deflate</value>
          <value name="Origin">http://test.berlin.lo</value>
          <value name="Access-Control-Request-Method">POST</value>
          <value name="Access-Control-Request-Headers">content-type</value>
          <value name="Connection">keep-alive</value>
          <value name="Pragma">no-cache</value>
          <value name="Cache-Control">no-cache</value>
        </values>
      </header>
    </operation>

    <operation active="y" name="send_psc_upload_local" with-data="y">
      <url>http://test.berlin.lo/upload.php</url>
      <method>POST</method>
      <header>
        <values>
          <value name="Host">test.berlin.lo</value>
          <value name="User-Agent">%AGENT%</value>
          <value name="Accept">text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8</value>
          <value name="Accept-Language">de,en-US;q=0.7,en;q=0.3</value>
          <value name="Accept-Encoding">gzip, deflate</value>
          <value name="Referer">http://test.berlin.lo</value>
          <value name="Content-Length">%CONTENTLEN%</value> <!-- 123985 -->
          <value name="Content-Type">multipart/form-data; boundary=%BOUNDARY%</value>
          <value name="Origin">http://test.berlin.lo</value>
          <!--<value name="Cookie">%COOKIE%</value>-->
          <value name="Connection">keep-alive</value>
          <value name="Pragma">no-cache</value>
          <value name="Cache-Control">no-cache</value>
        </values>
      </header>
    </operation>

    <operation active="y" name="send_psc_upload_local_replace" with-data="y">
      <url>http://test.berlin.lo/upload.php</url>
      <method>POST</method>
      <header>
        <values>
          <value name="Host">test.berlin.lo</value>
          <value name="User-Agent">%AGENT%</value>
          <value name="Accept">text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8</value>
          <value name="Accept-Language">de,en-US;q=0.7,en;q=0.3</value>
          <value name="Accept-Encoding">gzip, deflate</value>
          <value name="Referer">http://test.berlin.lo</value>
          <value name="Content-Length">%CONTENTLEN%</value> <!-- 123985 -->
          <value name="Content-Type">multipart/form-data; boundary=%BOUNDARY%</value>
          <value name="Origin">http://test.berlin.lo</value>
          <!--<value name="Cookie">%COOKIE%</value>-->
          <value name="Connection">%PJ_STR_T1%</value>
          <value name="Pragma">no-cache</value>
          <value name="Cache-Control">no-cache</value>
        </values>
      </header>
    </operation>

    <operation active="y" name="on_fail_dummy">
      <url>http://www.google.com</url>
      <method>GET</method>
      <header>
        <values>
          <value name="Host">google.com</value>
          <value name="User-Agent">%AGENT%</value>
          <value name="Accept">text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8</value>
          <value name="Accept-Language">de,en-US;q=0.7,en;q=0.3</value>
          <value name="Accept-Encoding">gzip, deflate</value>
        </values>
      </header>
    </operation>
  </operations>

</root>
