<root>

  <global>
    <host replace="%HOST%">prnt.sc</host>
    <useragent replace="%AGENT%">Mozilla/5.0 (X11; Linux i686; rv:38.0) Gecko/20100101 Firefox/38.0 Iceweasel/38.2.0</useragent>
    <!-- have a look at store[as] in scenario conf -->
    <!--<cookie replace="%COOKIE%"></cookie>-->
    <!-- globals will be stored as storeas^^ value if set 
         to be the same each time they are used  -->
    <boundary replace="%BOUNDARY%" storeas="boundary">---------------------------$(r=0; while [ $r -lt 29 ]; do ((r++)); echo -n $((${RANDOM}%10)); done)</boundary>
    <!-- 
      created binfile for cropped screenimage can be reset using sed
      e.g. see screencropupload main script
    -->
    <binfile replace="%BINDATAFILE%">crop.jpg</binfile>
  </global>

  <operations>

    <operation active="y" name="init_psc_upload">
      <url>http://%HOST%</url>
      <method>GET</method>
      <header>
        <values>
          <value name="Host">%HOST%</value>
          <value name="User-Agent">%AGENT%</value>
          <value name="Accept">text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8</value>
          <value name="Accept-Language">de,en-US;q=0.7,en;q=0.3</value>
          <value name="Accept-Encoding">gzip, deflate</value>
          <value name="Connection">keep-alive</value>
        </values>
      </header>
    </operation>

    <operation active="y" name="options_psc_upload">
      <url>https://prntscr.com/upload.php</url>
      <method>OPTIONS</method>
      <header>
        <values>
          <value name="Host">prntscr.com</value>
          <value name="User-Agent">%AGENT%</value>
          <value name="Accept">text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8</value>
          <value name="Accept-Language">de,en-US;q=0.7,en;q=0.3</value>
          <value name="Accept-Encoding">gzip, deflate</value>
          <value name="Origin">http://%HOST%</value>
          <value name="Access-Control-Request-Method">POST</value>
          <value name="Connection">keep-alive</value>
          <value name="Pragma">no-cache</value>
          <value name="Cache-Control">no-cache</value>
        </values>
      </header>
    </operation>

    <operation active="y" name="send_psc_upload" with-data="y">
      <url>https://prntscr.com/upload.php</url>
      <method>POST</method>
      <header>
        <values>
          <value name="Host">prntscr.com</value>
          <value name="User-Agent">%AGENT%</value>
          <value name="Accept">application/json, text/javascript, */*; q=0.01</value>
          <value name="Accept-Language">de,en-US;q=0.7,en;q=0.3</value>
          <value name="Accept-Encoding">gzip, deflate</value>
          <!--<value name="Referer">http://%HOST%</value>-->
          <value name="Content-Length">%CONTENTLEN%</value>
          <value name="Content-Type">multipart/form-data; boundary=%BOUNDARY%</value>
          <value name="Origin">http://%HOST%</value>
          <!--<value name="Cookie">%PJ_STR_COOKIE%</value>-->
          <value name="Connection">keep-alive</value>
          <value name="Pragma">no-cache</value>
          <value name="Cache-Control">no-cache</value>
        </values>
      </header>
    </operation>

  </operations>

</root>

